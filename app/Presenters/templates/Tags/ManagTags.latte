{block content}
  {define header}
    {define navigation}
      <div class="col-6 text-center text-md-end ">
        <a n:href="Homepage:" class="button__transparent multi-menu" style="padding-right: 20px">&larr; Dashboard</a>
      </div>
      <div class="col-6 text-center text-md-start">
        <a n:href="Edit:createTag" class="button__transparent multi-menu">&plus; Spr√°va
          kategorii</a></div>
    {/define}
    {include parent}
  {/define}
{/block}
{block errorBox}
<div n:foreach="$flashes as $flash" n:class="flash, $flash->type">
      {$flash->message}
    </div>
{/block}
{block adminContent}
<section id="latte-manag-tags" class="text-center mx-auto">
    <h2 class="py-5">Kategorie</h2>
    <div class="row">
      <div class="container">
        <div class="col-md-12 container-tags d-flex justify-content-center align-self-center flex-wrap px-5">
          <div n:foreach="$tags as $tag" class="tag">
            <a n:href="Tags:editTag $tag->id" class="tags">{$tag->name}</a>
          </div>
          <a n:href="Tags:createTag">&plus;</a>
        </div>
      </div>
    </div>
  </section>
{/block}
